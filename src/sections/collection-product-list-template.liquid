{% include 'collection-product-list-template-snippet' %}

{% schema %}
  {
    "name": "Collection pages",
    "settings": [
      {
        "type": "image_picker",
        "id": "breadcrumb_image",
        "label": "Breadcrumb image"
      }, 
      {
        "type": "select",
        "id": "col_des_position",
        "label": "Position of the collection description",
        "options": [
          { "value": "top", "label": "Top" },
          { "value": "bottom", "label": "Bottom" },
          { "value": "none", "label": "None" }
        ],
        "default": "top"
      },
      {
        "type": "select",
        "id": "mode_view_default",
        "label": "Mode view default",
        "options": [
          {
            "value": "cata-grid-5",
            "label": "Grid 5"
          },
          {
            "value": "cata-grid-4",
            "label": "Grid 4"
          },
          {
            "value": "cata-grid-3",
            "label": "Grid 3"
          },
          {
            "value": "cata-grid-2",
            "label": "Grid 2"
          },
          {
            "value": "cata-grid-2-v2",
            "label": "Product details simple"
          },
          {
            "value": "cata-grid-1",
            "label": "Product List"
          },
          {
            "value": "cata-grid-1-v2",
            "label": "Product details advanced"
          }
        ],
        "default": "cata-grid-1"
      },
      {
        "type": "checkbox",
        "id": "show_col_gl",
        "label": "Enable Mode View",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "show_col_sort_by",
        "label": "Enable Sort by",
        "default": true
      },
      {
        "type": "range",
        "id": "item_per_page",
        "label": "Products per page",
        "min": 8,
        "max": 50,
        "step": 1,
        "default": 16
      }, 
      {
        "type": "header",
        "content": "Collection Filter",
        "info": "To customize Collection Filter content, please click Add content > Filter by group."
      },
      {
         "type":"checkbox",
         "id":"and_logic",
         "label":"Disable 'AND' operator in a group filter",
         "default":true
      },
      {
        "type": "select",
        "id": "sb_filters",
        "label": "Filter type",
        "options": [
          { "value": "tags", "label": "Filter by Tags" },
          { "value": "groups", "label": "Filter by Groups"  }
        ],
        "default": "groups"
      },
      {
        "type": "select",
        "id": "sb_filters_position",
        "label": "Filter position",
        "options": [
          { "value": "sidebar","label": "Sidebar" },
          { "value": "body","label": "Body" },
          { "value": "none","label": "None" }
        ],
        "default": "sidebar"
      },
      {
        "type": "select",
        "id": "sb_filters_style",
        "label": "Filter sidebar style",
        "options": [
          { "value": "normal","label": "Normal" },
          { "value": "accordion","label": "Accordion" }
        ],
        "default": "normal"
      },
      {
        "type": "select",
        "id": "body_filters_style",
        "label": "Filter body and mobile style",
        "options": [
          { "value": "drawer","label": "Drawer" },
          { "value": "toggle","label": "Toggle" } 
        ],
        "default": "drawer"
      },
      {
        "type": "header",
        "content": "Sidebar Mode",
        "info": "To customize your sidebar content, please click Add content."
      },
      {
        "type": "select",
        "id": "sidebar_mode",
        "label": "Sidebar Mode",
        "options": [
          { "value": "left", "label": "Left sidebar" },
          { "value": "right", "label": "Right sidebar" },
          { "value": "none", "label": "None sidebar" }
        ],
        "default": "left"
      }
    ],
    "blocks": [
      {
        "type": "image",
        "name": "Main column - Banner",
        "settings": [
          {
            "type": "checkbox",
            "id": "width",
            "label": "Full width"
          },
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "header",
            "content": "Text"
          },
          {
            "type": "textarea",
            "id": "heading",
            "label": "Heading"
          },
          {
            "type": "textarea",
            "id": "subheading",
            "label": "Subheading"
          },
          {
            "type": "text",
            "id": "button_label",
            "label": "Button label",
            "default": "Shop now"
          },
          {
            "type": "url",
            "id": "button_link",
            "label": "Button link"
          },
          {
            "type": "header",
            "content": "Color"
          },
          {
            "type": "color",
            "id": "heading_color",
            "label": "Heading",
            "default": "#ffffff"
          },
          {
            "type": "color",
